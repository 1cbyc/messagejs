# MessageJS Environment Variables
# Copy this file to .env and fill in your values

# ===== Core Backend API =====
# Server port (default: 3001)
PORT=3001

# Database (matches docker-compose.yml)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://messagejs:password@localhost:5432/messagejs_dev

# Redis (matches docker-compose.yml)
REDIS_URL=redis://localhost:6379

# JWT Secret (generate a random string for production)
# Generate with: openssl rand -hex 32
JWT_SECRET=1b90b0773654f505889f65ee9d3f627e09a78f1b0f1cdb3078aef3a77cf7344e

# Encryption Key (must be exactly 32 hex characters for AES-256-GCM)
# Generate with: openssl rand -hex 16
ENCRYPTION_KEY=2b200e8fa567e2687d4f5e9b7c0fa97e

# Logging
LOG_LEVEL=info
NODE_ENV=development

# WhatsApp Webhook (you'll set this when configuring WhatsApp)
WHATSAPP_VERIFY_TOKEN=your-whatsapp-webhook-verify-token

# ===== Dashboard Frontend =====
# Base URL for the dashboard (default: http://localhost:3000)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# API endpoint for the dashboard to connect to
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
