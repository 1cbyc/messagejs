# MessageJS Environment Variables
# Copy this file to .env and fill in your values

# ===== Core Backend API =====
# Server port (default: 3001)
PORT=3001

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/messagejs

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secret (generate a random string for production)
# IMPORTANT: Must be kept secret and changed in production
JWT_SECRET=your-jwt-secret-here-change-in-production

# Encryption Key (must be exactly 32 characters for AES-256-GCM)
# Generate with: openssl rand -hex 16
ENCRYPTION_KEY=your-32-character-encryption-key

# Logging
LOG_LEVEL=info
NODE_ENV=development

# WhatsApp Webhook
WHATSAPP_VERIFY_TOKEN=your-whatsapp-webhook-verify-token

# ===== Dashboard Frontend =====
# Base URL for the dashboard (default: http://localhost:3000)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# API endpoint for the dashboard to connect to
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
