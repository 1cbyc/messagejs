{
  "compilerOptions": {
    /* Base Options for a modern library */
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022", "DOM"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Strictness for high-quality types */
    "strict": true,

    /* Build Configuration */
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "NodeNext",
    "declarationMap": true,

    /* Code Quality */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
