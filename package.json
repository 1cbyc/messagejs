{
  "name": "messagejs",
  "version": "0.1.0",
  "private": true,
  "description": "SendGrid, but for chat apps - Send messages via WhatsApp, Telegram, SMS, and more",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:core": "npm run build --workspace=@messagejs/shared-types && npm run build --workspace=@messagejs/core",
    "build:all": "npm run build --workspaces --if-present || true",
    "precheck": "npm run build --workspaces --if-present && echo 'âœ… All builds passed'",
    "dev": "npm run dev --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "core": "npm run dev --workspace=packages/core",
    "client": "npm run dev --workspace=packages/client",
    "dashboard": "npm run dev --workspace=packages/dashboard",
    "website": "npm run dev --workspace=packages/website",
    "build:dashboard": "npm run build --workspace=@messagejs/shared-types && npm run build --workspace=packages/dashboard"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "semver": "^7.7.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/1cbyc/messagejs.git"
  },
  "keywords": [
    "messaging",
    "whatsapp",
    "telegram",
    "sms",
    "sdk",
    "api",
    "chat"
  ],
  "author": "Isaac Emmanuel",
  "license": "MIT"
}
